# .env
NODE_ENV=development
PORT=3000
MONGO_PORT=27017
COMPOSE_PROJECT_NAME=anonymous-sharing-dev
COMPOSE_FILE=docker-compose.yml

# MongoDB Configuration
DB_NAME=anonymous-sharing-dev
MONGO_USER=dev_user
MONGO_PASSWORD=your_strong_dev_password
MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@db:27017/${DB_NAME}?authSource=admin

# Application Configuration
LOG_LEVEL=debug
NODE_OPTIONS="--max-old-space-size=512"

# Resource Limits (used in docker-compose)
MEMORY_LIMIT=512M
CPU_LIMIT=0.5

# Application Settings
RATE_LIMIT_WINDOW_MS=600000  # 10 minutes
RATE_LIMIT_MAX_REQUESTS=150  # Moderate for dev