<a 
    href="/<%= post.slug %>-<%= post.uuid %>"
    class="block bg-white rounded-lg shadow-sm p-4 hover:shadow-md transition-shadow"
>
    <p class="text-gray-800 line-clamp-2"><%= post.preview %></p>
    <div class="mt-2 flex justify-between items-center">
        <div class="text-sm text-gray-600 flex items-center space-x-3">
            <span class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                <%= new Date(post.createdAt).toLocaleDateString() %>
            </span>
            <span class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                </svg>
                <%= post.views.toLocaleString() %> views
            </span>
        </div>
        <%- include('quality-rating', { rating: typeof post.qualityRating !== 'undefined' ? post.qualityRating : 0 }) %>
    </div>
</a>